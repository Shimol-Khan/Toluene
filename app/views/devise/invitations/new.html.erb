<% content_for :title do %>
  Invite Developers
<% end %>

<div class="container">
	<div class="row justify-content-center">
		<div class="col-8" style="margin-top: 30vh">
			<div class="card">
				<div class="card-body">
					<h2 class="pb-3"><i class="fas fa-share-alt"></i> SEND INVITATION</h2>
						<%= simple_form_for(resource, as: resource_name, url: invitation_path(resource_name), html: { method: :post }) do |f| %>
						  <%= f.error_notification %>

						  <% resource.class.invite_key_fields.each do |field| -%>
						    <div class="form-inputs">
						      <%= f.input field, label: false, placeholder:'Developer\'s Email' %>
						    </div>
						  <% end -%>

						  <div class="form-actions">
						    <%= f.button :submit, t("devise.invitations.new.submit_button"),:class=>"btn btn-sm btn-success" %>
						    <%= link_to "Back", root_path, :class=>"btn btn-sm btn-info" %>
						  </div>
						<% end %>
				</div>
			</div>
		</div>
	</div>
</div>