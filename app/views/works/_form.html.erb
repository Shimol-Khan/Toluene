
<%= simple_form_for(@work) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.association :task,prompt:'Select Task' %>
    <%= f.input :description, input_html:{rows: 6}%>
    <%= f.association :user ,as: :hidden %>
    
  </div>

  <div class="form-actions">
    <%= f.button :submit,"Submit Now", :class=>"btn btn-success btn-sm ml-0" %>
    <%= link_to 'Back', works_path ,:class=>"btn btn-info btn-sm" %>
  </div>

<% end %>
