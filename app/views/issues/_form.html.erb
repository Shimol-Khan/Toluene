
<%= simple_form_for(@issue) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-group row">
    <div class="col-sm-4">
      <%= f.input :title %>
    </div>
    <div class="col-sm-4">
      <%= f.association :task, prompt: 'Select Task' %>
    </div>
    <div class="col-sm-4">
      <%= f.input :status, collection: ['Active', 'Solved'], prompt:'Select Current Status' %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-12">
      <%= f.input :description, as: :trix_editor %>
      <%= f.association :user ,as: :hidden %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit, :class=>"btn btn-success btn-sm ml-0" %>
    <%= link_to 'Back', issues_path ,:class=>"btn btn-info btn-sm" %>
  </div>
<% end %>



